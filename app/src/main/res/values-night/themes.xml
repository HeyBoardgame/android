<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Heyboardgame" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/mainColor</item>
        <item name="android:fontFamily">@font/cafesurround</item>
    </style>

    <style name="Theme.Heyboardgame" parent="Base.Theme.Heyboardgame" />

    <!-- SplashScreen -->
    <style name="Theme.Heyboardgame.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/mainColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Heyboardgame</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>

    <!-- SearchView -->
    <style name="SearchViewTheme" parent="Base.Theme.Heyboardgame">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/greyPressed</item>
    </style>

</resources>